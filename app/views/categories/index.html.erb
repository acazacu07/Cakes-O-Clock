<p id="notice"><%= notice %></p>

<h1 class="tex-center" >Categories</h1>
<section class="card-container margin">
    <div class="form-card padding-1">
        <table>
            <thead>
              <tr>
                <th>Imagen</th>
                <th>Title</th>
                <th colspan="3"></th>
              </tr>
            </thead>
      
            <tbody>
              <% @categories.each do |category| %>
                <tr>
                    <td class="img-table">
                        <%= image_tag category.image, :class=>"img" %>
                    </td>
                    <td>
                        <p class="text-center"> <strong><%= category.title %></strong></p>
                    </td>
                  <td><%= link_to 'Show', category, :class =>"btn-admin" %></td>
                  <td><%= link_to 'Edit', edit_category_path(category), :class =>"btn-admin" %></td>
                  <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn-admin" %></td>
                </tr>
              <% end %>
            </tbody>
        </table>
    </div>
</section>

<% if admin_user?%>
	<div class="container margin">
		<a><%= link_to 'New Category', new_category_path, :class =>"btn-admin" %> </a>
		<a><%= link_to 'Back', categories_path, :class =>"btn-admin" %> </a>
	</div>
<% end %>

