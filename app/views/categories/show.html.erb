<p id="notice"><%= notice %></p>

<h1 class="text-center" >Categories</h1>
<section class="container margin">
    <div class="form-card padding-1">
        <h2  class="text-left">Title:</h2>
        <h3 class="text-center"><%= @category.title %></h3>
        <h2  class="text-left">Image:</h2>
        <div class="img-table">
            <%= image_tag @category.image, :class=>"img" %>
        </div>
    </div>
</section>


<div class="container margin">
	<a><%= link_to 'Edit', edit_category_path(@category), :class =>"btn-admin" %></a>
	<a><%= link_to 'Back', categories_path, :class =>"btn-admin" %> </a>
</div>