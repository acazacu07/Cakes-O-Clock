<section class="container margin">
    <div class="form-card padding-1">
	<%= form_for(item) do |f| %>
		<% if item.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>
			<ul>
				<% item.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
		<% end %>

		<div class="padding">
			<%= f.label :image_url %>
			<%= f.text_field :image_url %>
		</div>

		<div class="padding">
			<%= f.label :title %>
			<%= f.text_field :title %>
		</div>

		<div class="padding">
			<%= f.label :category %>
			<%= f.text_field :category %>
		</div>

		<div class="padding">
			<%= f.label :description %>
			<%= f.text_area :description, class:"input-text"%>
		</div>

		<div class="padding">
			<%= f.label :price %>
			<%= f.text_field :price %>
		</div>

		<div class="padding">
			<%= f.submit  "UPDATE ITEM" %>
		</div>
		
	<% end %>
    </div>
</section>